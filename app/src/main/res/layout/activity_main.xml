<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teicm_team.supermarket_finder.MainActivity">

    <TextView
        android:text="@string/text_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/textInfo1"
        android:textSize="15sp" />

    <TextView
        android:text="@string/text_info_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInfo1"
        android:layout_centerHorizontal="true"
        android:id="@+id/textInfo2"
        android:textSize="15sp" />

    <Button
        android:text="@string/button_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/buttonAbout"
        android:layout_alignRight="@+id/buttonSearch"
        android:layout_alignEnd="@+id/buttonSearch"
        android:layout_alignLeft="@+id/buttonSearch"
        android:layout_alignStart="@+id/buttonSearch"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="@string/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAbout"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonSearch"
        style="@style/Widget.AppCompat.Button.Colored" />

    <TextView
        android:text="@string/text_info_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInfo2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textInfo3" />

</RelativeLayout>
